<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ToeicTestListQuestionsActivity"
    android:id="@+id/activity_toeic_test_list_questions_layout">

    <com.hcmute.finalproject.toeicapp.components.common.CommonHeaderComponent
        android:id="@+id/activity_toeic_test_list_questions_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

    </com.hcmute.finalproject.toeicapp.components.common.CommonHeaderComponent>

    <androidx.viewpager.widget.ViewPager
        android:paddingBottom="10dp"
        android:id="@+id/activity_toeic_test_list_questions_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_toeic_test_list_questions_header_title"
        android:layout_above="@+id/activity_toeic_test_list_questions_footer"
        />

    <com.hcmute.finalproject.toeicapp.components.common.CommonTestFooterComponent
        android:id="@+id/activity_toeic_test_list_questions_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>