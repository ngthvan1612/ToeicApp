<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">
        <TextView
            android:id="@+id/activity_list_vocabulary_item_text_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#008EF1"
            android:textStyle="bold"
            android:textSize="22dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/activity_list_vocabulary_item_text_vocabulary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abibe by"
                android:gravity="center_vertical"
                android:textColor="#008EF1"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/activity_list_vocabulary_item_text_meaning"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(phrasal verb) tuÃ¢n theo"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textStyle="italic"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>