<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck">


    <LinearLayout
        android:id="@+id/common_part_three_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/component_part_three_recyclerview"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"/>
    <com.hcmute.finalproject.toeicapp.components.media.AudioPlayerComponent
        android:id="@+id/component_part_three_audio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/component_part_three_common_test_footer"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp" />

    </LinearLayout>
</RelativeLayout>

