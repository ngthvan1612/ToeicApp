<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

        <TextView
            android:id="@+id/component_learn_vocabulary_question_question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry"
            android:textColor="#008EF1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/component_learn_vocabulary_question_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:minHeight="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="Your answer"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/component_learn_vocabulary_question_input_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:hint="Input your answer"
            android:lines="1"
            android:nextFocusDown="@id/component_learn_vocabulary_question_btn_next"
            android:singleLine="true" />

        <TextView
            android:id="@+id/component_learn_vocabulary_question_correct_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Correct answer!"
            android:textColor="#50D04E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/component_learn_vocabulary_question_wrong_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Wrong answer"
            android:textColor="#EA4361"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/component_learn_vocabulary_question_wrong_right_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Right answer:"
            android:textColor="#50D04E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/component_learn_vocabulary_question_wrong_right_answer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="abide by"
            android:textColor="#008EF1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/component_learn_vocabulary_question_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/component_learn_vocabulary_question_btn_next_background"
            android:minWidth="120dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#008EF1"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>